
(defwidget hyprland []
  (box
    :class "hyprland"
    :orientation "h"
    :halign "start"
    :spacing 0;
    :space-evenly true
    (children)
  )
)

(deflisten states
  "modules/hyprland/workspaces"
)

(defwidget workspace [name ?label]
  (button
    :onclick "hyprctl dispatch workspace \"${name}\""
    :class "ws-${states[name] ?: "idle"}"
    :width "40px"
    :height "40px"

    {label ?: name}
  )
)
