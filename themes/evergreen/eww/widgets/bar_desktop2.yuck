
(defwidget mon2_left []
  (hyprland
		; 一 二 三 四 五 六 七 八 九 十
		(workspace_hyprland :name "6" :label "六")
	  (workspace_hyprland :name "7" :label "七")
	  (workspace_hyprland :name "8" :label "八")
		(workspace_hyprland :name "9" :label "九")
	  (workspace_hyprland :name "10" :label "十")
  )
)

(defwidget mon2_center []
  (box
    :class "center"
    :halign "center"
    
    (xwindow)
  )
)

(defwidget mon2_right []
  (box
    :class "right"
    :space-evenly false
    :halign "end"

    (music)
    (time)
  ) 
)

(defwidget mon2_bar []
  (centerbox 
    :orientation "h"
    :class "bar"
    
    (mon2_left)
    (mon2_center)
    (mon2_right)
  )
)

(defwindow mon2
  :monitor "OMEN by HP 25"
  :geometry (geometry
    :x "0%"
    :y "5px"
    :width "80%"
    :height "40px"
    :anchor "top center"
  )
  :stacking "fg"
  :reserve (struts
    :distance "45px"
    :side "top"
  )
  :exclusive true
  :windowtype "desktop"
  :wm-ignore false

  (mon2_bar)
)

