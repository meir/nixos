
(defwidget bspwm []
  (box
    :class "bspwm"
    (children)
  )
)

(defwidget workspace [name ?label]
  (deflisten state
    :initial ""
    "modules/bspwm/workspace \"${name}\""
  )

  (button
    :onclick "bspc desktop -f \"${name}\""
    :class "workspace ws${name} ${state}"

    {label ? label : name}
  )
)
