
# open terminal
super + Return
  kitty

# open app launcher
super + @space
  rofi -show drun

# reload
super + alt + r
  pkill -x sxhkd && sxhkd &
  pkill -x picom

# quit app
super + q
  berryc quit

super + {m,f}
  berryc {window_monocle,fullscreen}

super + {_,shift + }{h,l}
  berryc {snap_left,snap_right}

alt + tab
  berryc cycle_focus

# move (node) to desktop
super + {_,shift + }{1-9,0}
  berryc {switch_workspace,send_to_workspace} '^{1-9,10}'

# open clipcat-menu
shift + super + v
  clipcat-menu

~button1
  berryc pointer_focus
